<Application x:Class="TravelAgency.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TravelAgency"
             xmlns:vm="clr-namespace:TravelAgency.WPF.ViewModels"
             xmlns:vw="clr-namespace:TravelAgency.WPF.Views"
             StartupUri="WPF/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Page" x:Key="pageStyle">
                <Setter Property="Focusable" Value="True"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
