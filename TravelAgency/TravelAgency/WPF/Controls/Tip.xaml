<UserControl x:Class="TravelAgency.WPF.Controls.Tip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgency.WPF.Controls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="LightGray"
                   Stroke="Black"
                   StrokeThickness="2"
                   StrokeDashArray="5 5"
                   SnapsToDevicePixels="True"
                   RadiusX="20"
                   RadiusY="20"/>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding Header, ElementName=root}" TextWrapping="Wrap" Margin="0 0 0 10" FontSize="16" FontWeight="Bold"/>
            <TextBlock Grid.Row="1" Text="{Binding TipText, ElementName=root}" TextWrapping="Wrap" FontSize="16"/>
        </Grid>
    </Grid>
</UserControl>
