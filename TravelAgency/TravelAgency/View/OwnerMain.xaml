<Window x:Class="TravelAgency.View.OwnerMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.View"
        mc:Ignorable="d"
        Title="Prikaz smeštaja" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        
        <Menu DockPanel.Dock="Top" Height="20">
            <MenuItem Header="_File" Height="20"></MenuItem>
            <MenuItem Header="_Edit" Height="20"></MenuItem>
        </Menu>
        
        <ToolBar DockPanel.Dock="Top" Height="Auto">
            <Button Content="Dodaj smeštaj" Click="ShowOwnerMain_Click"/>
            <Button Content="Profil" Click="ShowOwnerMain_Click"/>
        </ToolBar>

        <DataGrid DockPanel.Dock="Top" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv" Width="1.5*"/>
                <DataGridTextColumn Header="Tip" Width="1.5*"/>
                <DataGridTextColumn Header="Maksimalan broj gostiju" Width="1.5*"/>
                <DataGridTextColumn Header="Ocena" Width="2*"/>
            </DataGrid.Columns>

        </DataGrid>
    </DockPanel>
</Window>
