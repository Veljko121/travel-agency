<Window x:Class="TravelAgency.View.GuideMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.View"
        mc:Ignorable="d"
        Title="GuideMain" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="Welcome tour guide" FontSize="15" Grid.ColumnSpan="2"></Label>
        <Button Grid.Column="1" Grid.Row="3" Height="40" Content="Enter new tour" Click="NewTourClick"></Button>
        <Label Content="Todays tours" FontSize="20" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <DataGrid Grid.Row="1" Grid.Column="3" Grid.RowSpan="5" Grid.ColumnSpan="5"></DataGrid>
        <Button Grid.Column="9" Grid.Row="5" Content="Sign out" Height="40" Margin="10" Click="SignOutClick"></Button>
        <Button Grid.Column="6" Height="40" Content="Start the tour" Margin="5"></Button>
        <Button Grid.Column="7" Height="40" Content="Stop the tour" Margin="5"></Button>
    </Grid>
</Window>
